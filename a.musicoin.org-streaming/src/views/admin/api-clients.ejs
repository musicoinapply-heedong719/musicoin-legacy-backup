    <!-- ./wrapper -->
    <%- include admin-footer.ejs %>
      
        <script>
            $( document ).ready(function() {
                $(function () {
                $("#example1").DataTable({
                    "processing": true,
                    "ajax": {
                        "url": "/admin/elements/api-clients", "dataSrc": function (json) {
                            var return_data = new Array();

                            for (var i = 0; i < json.length; i++) {
                                var apiClient = json[i];
                                var name = "";
                                var clientId = "";
                                var domains = "";
                                var methods = "";
                                var accountLocked = "";

                                name = apiClient.name;
                                clientId += apiClient.clientId;
                                domains += apiClient.domains;
                                methods += apiClient.methods;
                                accountLocked += apiClient.accountLocked ? "Locked" : "";

                                return_data.push({
                                    'name': name,
                                    'clientId': clientId,
                                    'domains': domains,
                                    'methods': methods,
                                    'accountLocked': accountLocked
                                });
                            }
                            return return_data;
                        }
                    },
                    columns: [
                        { 'data': 'name' },
                        { 'data': 'clientId' },
                        { 'data': 'domains' },
                        { 'data': 'methods' },
                        { 'data': 'accountLocked' }
                    ]
                });
            });
});
   
        </script>
